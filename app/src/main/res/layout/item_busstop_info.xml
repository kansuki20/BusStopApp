<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_busStopName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/round_left"
            android:gravity="center"
            android:layout_weight="3"
            android:text="정류소 명"
            android:textColor="#2f3640"
            android:textSize="20sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tv_firstMin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/round_right"
            android:gravity="center"
            android:layout_weight="2"
            android:text="약 5분"
            android:textColor="#2f3640"
            android:textSize="20sp"
            android:textStyle="bold"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:layout_gravity="right"
        android:orientation="horizontal"
        android:layout_marginTop="4dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/round_all"
        android:gravity="center">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="6"
            android:text="다음 도착"
            android:textColor="#2f3640"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tv_secondMin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="4"
            android:text="약  20분"
            android:textColor="#2f3640"
            android:textStyle="bold"/>
    </LinearLayout>


</LinearLayout>